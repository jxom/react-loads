{
    "include": ["src/**/*"],
    "exclude": ["src/**/*.test.tsx", "node_modules"],
    "compilerOptions": {
      "baseUrl": "",
      "paths": {
        "*": [ "./typings/*" ]
      },
      "outDir": "ts",
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "strict": true,
      "declaration": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": false,
      "noUnusedParameters": true,
      "stripInternal": true,
      "skipLibCheck": true
    }
  }
